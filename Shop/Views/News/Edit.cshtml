@model Shop.Models.News

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>News</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.NewsTitle)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NewsTitle)
            @Html.ValidationMessageFor(model => model.NewsTitle)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NewsContent)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NewsContent)
            @Html.ValidationMessageFor(model => model.NewsContent)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NewsDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NewsDate)
            @Html.ValidationMessageFor(model => model.NewsDate)
        </div>
		
        <div class="editor-label">
            @Html.LabelFor(model => model.NewsAuthor)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NewsAuthor)
            @Html.ValidationMessageFor(model => model.NewsAuthor)
        </div>

        <p>
            <input type="submit" value="Edytuj" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Powrót do listy", "list")
</div>
