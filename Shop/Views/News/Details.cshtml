@model Shop.Models.News

@{
    ViewBag.Title = "Szczegóły newsa";
}

<style>
    label
    {
        display: inline
    }
    .data
    {
        font-size: 20px
    }
</style>

<h2>Szczegóły newsa</h2>

<table>
    <tr>
        <td>
            @Html.LabelFor(model => model.NewsTitle)
        </td>
        <td>
            <b class="data">@Html.DisplayFor(model => model.NewsTitle)</b>
        </td>
    </tr>
 
    <tr>
        <td>
            @Html.LabelFor(model => model.NewsContent)
        </td>
        <td>
            <b class="data">@Html.DisplayFor(model => model.NewsContent)</b>
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(model => model.NewsDate)
        </td>
        <td>
            <b class="data">@Html.DisplayFor(model => model.NewsDate)</b>
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(model => model.NewsAuthor)
        </td>
        <td>
            <b class="data">@Html.DisplayFor(model => model.NewsAuthor)</b>
        </td>
    </tr>
   
</table>

<div>
    @Html.ActionLink("Powrót do listy", "List")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
