@model Shop.Models.Promotion

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Promotion</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.PromotionTitle)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PromotionTitle)
            @Html.ValidationMessageFor(model => model.PromotionTitle)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ProductName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ProductName)
            @Html.ValidationMessageFor(model => model.ProductName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DiscountPercent)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DiscountPercent)
            @Html.ValidationMessageFor(model => model.DiscountPercent)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.BeginningDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.BeginningDate)
            @Html.ValidationMessageFor(model => model.BeginningDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EndDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EndDate)
            @Html.ValidationMessageFor(model => model.EndDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MaxQuantity)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MaxQuantity)
            @Html.ValidationMessageFor(model => model.MaxQuantity)
        </div>

        <p>
            <input type="submit" value="Edytuj" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Powrót do listy", "list")
</div>
